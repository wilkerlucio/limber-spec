require_once dirname(__FILE__) . "/../lib/LimberSpec.php";
require_once dirname(__FILE__) . "/../lib/LimberSpec/Performance.php";
require_once dirname(__FILE__) . "/../lib/LimberSpec/Console/Args.php";

$args = new LimberSpec_Console_Args();

$files = $args->files();

foreach ($files as $file) {
    include_once $file;
}

$results = array();

$elapsed = LimberSpec_Performance::beenchmark(function() use (&$results) {
    $results = LimberSpec::run_all();
});

$formater = $args->formater($results);

echo $formater->output();

echo "\nFinished in " . round($elapsed, 3) . " seconds\n";
